{
    "manifest_version": 3,
    "name": "ClerkShortcutPro",
    "version": "1.8.6",
    "description": "Provides intuitive shortcuts to navigate and interact with the my.clerk.io UI",
    "permissions": ["storage", "activeTab", "scripting", "tabs","contextMenus"],
    "host_permissions": ["https://translation.googleapis.com/*"],
    "background": { "service_worker": "./src/scripts/background.js" },
    "web_accessible_resources": [
        {
            "matches": [
                "https://my.clerk.io/*",
                "https://hq.clerk.io/*",
                "https://app.hubspot.com/*",
                "https://www.notion.so/*",
                "https://linear.app/*",
                "https://calendar.google.com/*",
                "http://*/*",
                "https://*/*"
            ],
            "resources": [
                "./src/scripts/injected.js",
                "./assets/openBanana.svg",
                "./assets/banana1.svg"
            ]
        }
    ],
    "action": {
        "default_popup": "./dist/index.html"
    },
    "icons": {
        "48": "./assets/thumbnail.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://my.clerk.io/*",
                "https://hq.clerk.io/*",
                "https://app.hubspot.com/*",
                "https://www.notion.so/*",
                "https://linear.app/*",
                "https://calendar.google.com/*",
                "http://*/*",
                "https://*/*"
            ],
            "js": ["./src/scripts/content.js", "./src/scripts/translations.js", "./src/scripts/nothingSuspiciousHere.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}
