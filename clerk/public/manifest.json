{
    "manifest_version": 3,
    "name": "Clerk Shortcut Pro",
    "version": "1.0",
    "description": "",
    "action": {
        "default_title": "Clerk Shortcut Pro",
        "default_popup": "./index.html"
    },
    "background": {
      "service_worker": "assets/background.js",
      "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "run_at": "document_start",
          "js": ["assets/content.js"]
        }
      ],
      "web_accessible_resources": [
        {
            "resources": ["assets/*"],
            "matches": ["http://*/*","https://*/*"]
        }
    ],
    "permissions": [
        "scripting",
        "tabs",
        "commands",
        "background",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
  }